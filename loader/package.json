{
  "name": "web",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "esbuild --outfile=dist/index.mjs --target=chrome70,firefox68 --format=esm --bundle --minify --loader:.svg=dataurl src/index.js",
    "install-wasm": "cp ../core/pkg/*.wasm dist/",
    "serve": "sirv --dev ."
  },
  "author": "yuekcc",
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2020": true,
      "jest": true,
      "mocha": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.14.14",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.0",
    "sass": "^1.49.0",
    "sirv-cli": "^2.0.2"
  },
  "dependencies": {
    "@unocss/preset-mini": "^0.26.2",
    "@unocss/runtime": "^0.26.2",
    "github-markdown-css": "^5.1.0",
    "minireset.css": "^0.0.7"
  }
}
